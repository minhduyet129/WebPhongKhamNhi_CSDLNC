@model WebPhongKhamNhi.Models.Chitietdonthuoc

@{
    ViewData["Title"] = "Sửa chi tiết đơn thuốc";
}

<h1>Sửa chi tiết đơn thuốc</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditCTDT">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaDonThuoc" />
            <input type="hidden" asp-for="MaThuoc" />
            <div class="form-group">
                <label asp-for="SoLuong" class="control-label">Số Lượng</label>
                <input asp-for="SoLuong" class="form-control" />
                <span asp-validation-for="SoLuong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HuongDanSuDung" class="control-label">Hướng dẫn sử dụng</label>
                <textarea asp-for="HuongDanSuDung" class="form-control"> </textarea>
                <span asp-validation-for="HuongDanSuDung" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Details" asp-route-id="@Model.MaDonThuoc">Quay lại chi tiết đơn thuốc</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
