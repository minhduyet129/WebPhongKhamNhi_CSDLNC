@model WebPhongKhamNhi.Models.Donthuoc

@{
    ViewData["Title"] = "Xóa";
}

<h1>Xóa</h1>

<h3>Bạn có muốn xóa không</h3>
<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Tên đơn thuốc
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TenDonThuoc)
        </dd>        
    </dl>

    <form asp-action="DeletePost">
        <input type="hidden" name="mahoso" value="@Model.MaHoSo" />
        <input type="hidden" asp-for="MaDonThuoc" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |

    </form>
    <a asp-action="GetDonThuocTheoHoSo" asp-route-id="@Model.MaHoSo">Quay lại danh sách</a>
</div>
