@model WebPhongKhamNhi.Models.Chitiethoadonthuoc

@{
    ViewData["Title"] = "EditCTHDT";
}

<h1>Chỉnh sửa hóa đơn thuốc</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditCTHDT">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaHoaDonThuoc" />
            <input type="hidden" asp-for="MaThuoc" />
            <div class="form-group">
                <label asp-for="SoLuong" class="control-label"></label>
                <input asp-for="SoLuong" class="form-control" />
                <span asp-validation-for="SoLuong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gia" class="control-label"></label>
                <input asp-for="Gia" class="form-control" />
                <span asp-validation-for="Gia" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Details" asp-route-id="@ViewBag.MaHoaDonThuoc">Quay lại chi tiết hóa đơn thuốc</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
