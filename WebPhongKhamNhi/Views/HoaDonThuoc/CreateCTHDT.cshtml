@model WebPhongKhamNhi.Models.Chitiethoadonthuoc

@{
    ViewData["Title"] = "CreateCTHDT";
}

<h1>Thêm chi tiết</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateCTHDT">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" name="MaHoaDonThuoc" value="@ViewBag.MaHoaDonThuoc" />
                
            </div>
            <div class="form-group">
                <label class="control-label">Tên thuốc</label>
                @Html.DropDownList("MaThuoc", new SelectList(ViewBag.Thuoc, "MaThuoc", "Ten"), String.Empty, new { @Class = "form-control" })
            </div>
            <div class="form-group">
                <label asp-for="SoLuong" class="control-label"></label>
                <input asp-for="SoLuong" class="form-control"  min="1" value="1" />
                <span asp-validation-for="SoLuong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gia" class="control-label"></label>
                <input asp-for="Gia" class="form-control" min="1"/>
                <span asp-validation-for="Gia" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Thêm" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Details" asp-route-id="@ViewBag.MaHoaDonThuoc">Quay lại chi tiết hóa đơn thuốc</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
