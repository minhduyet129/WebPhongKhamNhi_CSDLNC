@model IEnumerable<WebPhongKhamNhi.Models.Bacsi>

@{
    ViewData["Title"] = "Index";
    int i = 1;
}

<h1>Danh sách bác sĩ</h1>

<p>
    <a asp-action="Create">Thêm mới bác sĩ</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>STT</th>
            <th>
                @Html.DisplayNameFor(model => model.HoTen)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.TrinhDo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SoDienThoai)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaKhoaNavigation.TenKhoa)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@(i++)</td>
            <td>
                @Html.DisplayFor(modelItem => item.HoTen)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.TrinhDo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoDienThoai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaKhoaNavigation.TenKhoa)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MaBacSi">Cập nhật</a> |
                
                <a asp-action="Delete" asp-route-id="@item.MaBacSi">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>
