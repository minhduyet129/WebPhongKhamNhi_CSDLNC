@model WebPhongKhamNhi.Models.Phieuxetnghiem

@{
    ViewData["Title"] = "Xóa";
}

<h1>Xóa</h1>

<h3>Bạn có muốn xóa không?</h3>
<div>
    
    <dl class="row">
        <dt class="col-sm-2">
           Ngày thanh toán
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NgayThanhToan)
        </dd>
        <dt class="col-sm-2">
            Tổng tiền
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TongTien)
        </dd>
        
    </dl>

    <form asp-action="DeletePost">
        <input type="hidden" name="mahoso" value="@Model.MaHoSo" />
        <input type="hidden" asp-for="MaPhieuXetNghiem" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |

    </form>
    <a asp-action="GetPXNTheoHoSo" asp-route-id="@Model.MaHoSo">Quay lại danh sách phiếu xét nghiệm</a>
</div>
