@model WebPhongKhamNhi.Models.Phieuxetnghiem

@{
    ViewData["Title"] = "Chi tiết";
}

<h1>Chi tiết phiếu xét nghiệm</h1>

<div> 
    
    <dl class="row">
        <dt class="col-sm-2">
           Mã phiếu xét nghiệm
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaPhieuXetNghiem)
        </dd>
        <dt class="col-sm-2">
           Mã hồ sơ
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaHoSo)
        <dt class="col-sm-2">
            Ngày thanh toán
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NgayThanhToan)
        </dd>
        <dt class="col-sm-2">
            Tổng tiền
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TongTien)
        </dd>

    </dl>
    <h3>Chi tiết phiếu xét nghiệm</h3>
    <a asp-action="CreateCTPXN" asp-route-maphieuxetnghiem="@Model.MaPhieuXetNghiem" style="display:block"><button class="btn btn-primary">Thêm xét nghiệm vào phiếu xét nghiệm</button></a>

    <br />
    <table class="table table-sm">
        <thead>
            <tr>
                <th>#</th>
                <th>Tên xét nghiệm</th>
                <th>Chi Phí</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.ListCTPXN)
            {
                <tr>
                    <td></td>
                    <td>@item.MaXetNghiemNavigation.TenXetNghiem</td>
                    <td>@item.ChiPhi</td>
                    <td>
                        <a asp-action="EditCTPXN" asp-route-maphieuxetnghiem="@item.MaPhieuXetNghiem" asp-route-maxetnghiem="@item.MaXetNghiem">Sửa</a> |

                        <a asp-action="DeleteCTPXN" asp-route-maphieuxetnghiem="@item.MaPhieuXetNghiem" asp-route-maxetnghiem="@item.MaXetNghiem">Xóa</a>
                    </td>
                </tr>
            }


        </tbody>
    </table>
</div>

<div>
   
        <a asp-action="GetPXNTheoHoSo" asp-route-id="@Model.MaHoSo">Quay lại</a>
   
</div>
