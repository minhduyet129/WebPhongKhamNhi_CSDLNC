@model WebPhongKhamNhi.Models.Chitietphieuxetnghiem

@{
    ViewData["Title"] = "Thêm xét nghiệm";
}

<h1>Thêm xét nghiệm</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateCTPXN">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" name="MaPhieuXetNghiem" value="@ViewBag.MaPhieuXetNghiem" />

            </div>
            <div class="form-group">
                <label class="control-label">Tên xét nghiệm</label>
                @Html.DropDownList("MaXetNghiem", new SelectList(ViewBag.Dichvuxetnghiem, "MaXetNghiem", "TenXetNghiem"), String.Empty, new { @Class = "form-control" })
            </div>
            <div class="form-group">
                <label asp-for="ChiPhi" class="control-label">Chi phí</label>
                <input asp-for="ChiPhi" class="form-control" />
                <span asp-validation-for="ChiPhi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Thêm" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Details" asp-route-id="@ViewBag.MaPhieuXetNghiem">Quay lại chi tiết phiếu xét nghiệm</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
