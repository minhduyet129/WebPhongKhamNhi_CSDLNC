@model WebPhongKhamNhi.Models.Phieuxetnghiem

@{
    ViewData["Title"] = "Tạo phiếu xét nghiệm";
}

<h1>Tạo phiếu xét nghiệm</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreatePXNTheoHoSo">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NgayThanhToan" class="control-label">Ngày thanh toán</label>
                <input asp-for="NgayThanhToan" class="form-control" />
                <span asp-validation-for="NgayThanhToan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TongTien" class="control-label">Tổng tiền</label>
                <input asp-for="TongTien" class="form-control" />
                <span asp-validation-for="TongTien" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaHoSo" class="control-label">Mã hồ sơ</label>
                <select asp-for="MaHoSo" class="form-control" asp-items="ViewBag.MaHoSo"></select>
            </div> 
            <div class="form-group">
                <label class="control-label">Tên bác sĩ</label><br />

                @Html.DropDownList("MaBacSi", new SelectList(ViewBag.BacSi, "MaBacSi", "HoTen"), String.Empty, new { @Class = "form-control" })
            </div>
            <div class="form-group">
                <input type="hidden" name="MaHoSo" value="@ViewBag.MaHoSo" /> 
                </div>
                <div class="form-group">
                    <input type="submit" value="Tạo" class="btn btn-primary" />
                </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="GetPXNTheoHoSo" asp-route-id="@ViewBag.MaHoSo">Quay lại</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
