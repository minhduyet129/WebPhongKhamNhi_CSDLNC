@model WebPhongKhamNhi.Models.Khoa

@{
    ViewData["Title"] = "Delete";
}

<h1>Xóa</h1>

<h3>Bạn có chắc xóa khoa @Model.TenKhoa khỏi danh sách không</h3>
<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TenKhoa) :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TenKhoa)
        </dd>
    </dl>

    <form asp-action="DeletePost">
        <input type="hidden" asp-for="MaKhoa" />
        <input type="submit" value="Xóa" class="btn btn-danger" />

    </form>
    <a asp-action="Index">Quay lại danh sách</a>
</div>
